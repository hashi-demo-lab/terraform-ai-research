{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:Australia/Sydney}"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW", "--privileged"],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {}
  },

  "postCreateCommand": "bash /workspace/.devcontainer/claude-code/scripts/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "hashicorp.terraform",
        "Anthropic.claude-code",
        "redhat.vscode-yaml",
        "HashiCorp.HCL"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory,target=/commandhistory,type=volume",
    "source=claude-code-config,target=/home/node/.claude,type=volume"
  ],
  "remoteEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "CLAUDE_GITHUB_MCP_ENABLED": "true",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "TFE_TOKEN": "${localEnv:TEAM_TFE_TOKEN}",
    "AWS_ACCESS_KEY_ID": "${localEnv:AWS_ACCESS_KEY_ID}",
    "AWS_SECRET_ACCESS_KEY": "${localEnv:AWS_SECRET_ACCESS_KEY}",
    "AWS_SESSION_TOKEN": "${localEnv:AWS_SESSION_TOKEN}",
    "AWS_SESSION_EXPIRATION": "${localEnv:AWS_SESSION_EXPIRATION}",
    "VAULT_RADAR_LICENSE": "${localEnv:VAULT_RADAR_LICENSE:}",
    "CLAUDE_CODE_AGENT_SWARMS": "true",
    "CLAUDE_CODE_ENABLE_TASKS": "true",
    "CLAUDE_CODE_TEAM_NAME": "terraform_workflow_testing",
    "INTERNAL_CA_HOST": "${localEnv:INTERNAL_CA_HOST}",
    "INTERNAL_CA_IP": "${localEnv:INTERNAL_CA_IP}",
    "INTERNAL_CA_CERT_NAME": "${localEnv:INTERNAL_CA_CERT_NAME}",
    "INTERNAL_CA_ADDITIONAL_HOSTS": "${localEnv:INTERNAL_CA_ADDITIONAL_HOSTS}",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "${localEnv:CLAUDE_CODE_ENABLE_TELEMETRY}",
    "OTEL_METRICS_EXPORTER": "${localEnv:OTEL_METRICS_EXPORTER}",
    "OTEL_LOGS_EXPORTER": "${localEnv:OTEL_LOGS_EXPORTER}",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "${localEnv:OTEL_EXPORTER_OTLP_PROTOCOL}",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "${localEnv:OTEL_EXPORTER_OTLP_ENDPOINT}",
    "OTEL_EXPORTER_OTLP_CERTIFICATE": "${localEnv:OTEL_EXPORTER_OTLP_CERTIFICATE}",
    "NODE_EXTRA_CA_CERTS": "/usr/local/share/ca-certificates/internal-ca-chain.crt",
    "OTEL_METRIC_EXPORT_INTERVAL": "${localEnv:OTEL_METRIC_EXPORT_INTERVAL}",
    "OTEL_LOGS_EXPORT_INTERVAL": "${localEnv:OTEL_LOGS_EXPORT_INTERVAL}"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace"
}
